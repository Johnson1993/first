import java.io.File;
import java.util.ArrayList;
import java.util.List;

public class ReadFiles {

    public static List<File> fileList = new ArrayList<File>();

    public List<File> read(File file) {
        if (file.isDirectory()) {
            File[] files = file.listFiles();
            for (File f : files) {
                this.read(f);
            }
        } else if (file.length() > 0) {

            fileList.add(file);
        }
        return fileList;
    }

}
